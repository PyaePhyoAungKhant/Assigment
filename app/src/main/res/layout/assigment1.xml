<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/flower"
        android:scaleType="centerCrop"
        />
    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Oeschinen Lake Campground"
        android:textColor="#222222"
        android:textSize="20sp"
        android:layout_below="@+id/image"/>

    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt1"
        android:layout_marginTop="10dp"
        android:text="Kanderseg ,Switzerland"
        android:textColor="#9A9797"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="46dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:layout_marginLeft="53dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@+id/txt1"
        android:background="@drawable/ic_baseline_star_24" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="23dp"
        android:layout_toRightOf="@id/btn1"
        android:text="41" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="56dp"
        android:layout_height="38dp"
        android:layout_below="@+id/txt2"
        android:layout_marginTop="29dp"
        android:layout_marginLeft="25dp"
        android:background="@drawable/ic_call" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="55dp"
        android:layout_height="37dp"
        android:layout_below="@+id/txt2"
        android:layout_marginLeft="76dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/btn2"
        android:background="@drawable/ic_near_me" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="48dp"
        android:layout_height="37dp"
        android:layout_below="@+id/txt2"
        android:layout_marginLeft="97dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/btn3"
        android:background="@drawable/ic_share" />

    <TextView
        android:id="@+id/txt3"
        android:layout_width="56dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn2"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="14dp"
        android:text="Call"
        android:textColor="@color/bue"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn3"
        android:layout_marginLeft="74dp"
        android:layout_marginTop="14dp"
        android:layout_toRightOf="@+id/txt3"
        android:text="Route"
        android:textColor="@color/bue"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txt5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn3"
        android:layout_marginLeft="93dp"
        android:layout_marginTop="14dp"
        android:layout_toRightOf="@+id/txt4"
        android:text="Share"
        android:textColor="@color/bue"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt5"
        android:layout_marginTop="31dp"
        android:text="@string/letter" />


</RelativeLayout>